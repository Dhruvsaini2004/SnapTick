# MongoDB Connection String (required)
MONGO_URI=mongodb://localhost:27017/snaptick

# JWT Secret for authentication (required in production - use a long random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server port (optional, defaults to 5000)
PORT=5000

# Base URL for the API (used for generating image URLs in responses)
# Set this to your production domain in deployment
BASE_URL=http://localhost:5000

# Comma-separated list of allowed origins for CORS
# Set this to your frontend URL(s) in production
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# DeepFace service URL (optional, defaults to http://localhost:5001)
DEEPFACE_URL=http://localhost:5001

# Node environment (set to 'production' for production deployment)
NODE_ENV=development
